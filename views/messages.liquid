{% render 'partials/head.liquid' %}

<h1>Berichtenbord</h1>

<section class="berichtenbord">
    <!--Berichten die binnen komne-->
    <ol>
        {% for message in messages %}
        <li>
            <strong>{{ message.from }}:</strong>
            {{ message.text }}
        </li>
        {%endfor %}
    </ol>

    <!--formulier om bericht toe te voegen-->
    <form method="POST" action="/berichten">
        <label>
            Naam:
            <input type="text" name="from" placeholder="typ je naam ..." required>    
        </label>
        <label>
            Bericht:
            <input type="text" name="message" placeholder="typ je bericht ..." required>
        </label>
        <button type="submit">Verstuur</button>
    </form>
</section>


{% render 'partials/foot.liquid', squads: squads %}